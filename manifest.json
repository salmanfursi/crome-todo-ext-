{
    "manifest_version": 3,
    "name": "Todo List",
    "version": "1.0",
    "description": "A simple todo list Chrome extension",
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage"
    ],
    "icons": {
        "48": "./48.png",     
        "128": "./128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    }
}

